<?xml version="1.0"?>
<!DOCTYPE project>

<project>
	<import file="../../../tools/sdk/build-common-osgi-plugin.xml" />

	<property name="auto.deploy.dir" value="${liferay.home}/osgi/portal" />

	<property name="vaadin.file" value="../../../../portal-web/third-party/vaadin-6.8.12-liferay.zip" />

	<target name="build-vaadin">
		<if>
			<not>
				<uptodate
					srcfile="third-party/${vaadin.file}"
					targetfile="tmp/META-INF/resources/html/VAADIN"
				/>
			</not>
			<then>
				<delete dir="tmp/META-INF/resources/html/VAADIN_ZIP" />

				<unzip src="third-party/${vaadin.file}" dest="tmp/META-INF/resources/html/VAADIN_ZIP" />

				<delete dir="tmp/META-INF/resources/html/VAADIN" />

				<copy todir="tmp/META-INF/resources/html/VAADIN/themes" preservelastmodified="true">
					<fileset dir="tmp/META-INF/resources/html/VAADIN_ZIP/VAADIN/themes">
						<include name="default/**" />
						<include name="base/**" />
						<include name="runo/**" />
						<include name="reindeer/**" />
						<include name="liferay/**" />
					</fileset>
				</copy>

				<copy todir="tmp/META-INF/resources/html/VAADIN/widgetsets" preservelastmodified="true">
					<fileset dir="tmp/META-INF/resources/html/VAADIN_ZIP/VAADIN/widgetsets">
						<include name="com.vaadin.portal.gwt.PortalDefaultWidgetSet/**" />
					</fileset>
				</copy>

				<delete dir="tmp/META-INF/resources/html/VAADIN_ZIP" />
			</then>
		</if>
	</target>

	<target name="jar" depends="build-vaadin">
		<jar-macro
			module.dir="${basedir}"
		/>
	</target>
</project>